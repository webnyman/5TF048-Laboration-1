@{
    ViewData["Title"] = "Admin – Dashboard";
}
<h2>@ViewData["Title"]</h2>

@if (TempData["Flash"] != null)
{
    <div class="alert alert-success">@TempData["Flash"]</div>
}

<div class="row mt-3">
    <div class="col-md-3"><div class="card p-3"><strong>Användare</strong><div class="display-6">@ViewBag.UserCount</div></div></div>
    <div class="col-md-3"><div class="card p-3"><strong>Roller</strong><div class="display-6">@ViewBag.RoleCount</div></div></div>
    <div class="col-md-3"><div class="card p-3"><strong>Instrument</strong><div class="display-6">@ViewBag.InstrumentCount</div></div></div>
    <div class="col-md-3"><div class="card p-3"><strong>Pass (sample)</strong><div class="display-6">@ViewBag.SessionCount</div></div></div>
</div>

<div class="mt-4">
    <a asp-action="Users" class="btn btn-primary">Hantera användare</a>
</div>
