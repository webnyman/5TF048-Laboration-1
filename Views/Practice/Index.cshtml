@model PracticeLogger.Models.PracticeSummary
@{
    ViewBag.Title = "Summering";
}

<div class="d-flex justify-content-between align-items-center">
    <h2>Summering</h2>
    <div class="btn-group">
        <a asp-action="Start" class="btn btn-outline-secondary">⬅️ Till listan</a>
        <a asp-action="Create" class="btn btn-primary">➕ Lägg till pass</a>
    </div>
</div>

@if (ViewData["Info"] != null)
{
    <div class="alert alert-info mt-3">@ViewData["Info"]</div>
}

<!-- Filterform (GET) -->
<form asp-action="Summary" method="get" class="row g-2 mt-2">
    <div class="col-auto">
        <label for="instrument" class="col-form-label">Filtrera på instrument</label>
    </div>
    <div class="col-auto">
        <input id="instrument" name="instrument" class="form-control" value="@(ViewBag.Filter ?? "")" placeholder="t.ex. Trumpet" />
    </div>
    <div class="col-auto">
        <button class="btn btn-outline-primary" type="submit">Filtrera</button>
        <a asp-action="Summary" class="btn btn-outline-secondary">Rensa</a>
    </div>
</form>

@if (Model.TotalMinutes == 0)
{
    <p class="mt-4 text-muted">Inga pass hittades för vald filtrering.</p>
}
else
{
    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">Totalt antal minuter</h5>
                    <p class="display-6 mb-0">@Model.TotalMinutes</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">Snitt per aktiv dag</h5>
                    <p class="display-6 mb-0">@Model.AvgPerDay</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            @if (ViewBag.Filter != null)
            {
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Aktivt filter</h5>
                        <span class="badge bg-info text-dark">@ViewBag.Filter</span>
                    </div>
                </div>
            }
        </div>
    </div>

    <h4 class="mt-3">Minuter per instrument</h4>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Instrument</th>
                <th>Minuter</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var kv in Model.MinutesPerInstrument)
            {
                <tr>
                    <td>@kv.Key</td>
                    <td>@kv.Value</td>
                </tr>
            }
        </tbody>
    </table>
}
