@model IEnumerable<PracticeLogger.Models.PracticeSessionListItem>
@using PracticeLogger.Models

@{
    ViewData["Title"] = "Alla övningspass";
}

<h2>@ViewData["Title"]</h2>

<div class="d-flex justify-content-between mb-3">
    <a asp-action="Create" class="btn btn-primary">➕ Lägg till pass</a>
    <a asp-action="Summary" class="btn btn-outline-secondary">🧾 Summering</a>
</div>

<form asp-action="Index" method="get" class="row g-2 mb-3">
    <div class="col-auto">
        <input type="text" name="q" class="form-control" placeholder="Sök i fokus" value="@ViewBag.Query" />
    </div>
    <div class="col-auto">
        <select name="instrumentId" asp-items="ViewBag.Instruments" class="form-select">
            <option value="">Alla instrument</option>
        </select>
    </div>
    <div class="col-auto">
        <button class="btn btn-outline-primary" type="submit">Sök</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Rensa</a>
    </div>
</form>

@if (!Model.Any())
{
    <p class="text-muted">Inga övningspass registrerade.</p>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Datum</th>
                <th>Instrument</th>
                <th>Passtyp</th>
                <th>Fokus</th>
                <th>Minuter</th>
                <th>Intensitet</th>
                <th>Mål</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in Model)
            {
                var label = PracticeTypeCatalog.Labels.TryGetValue(s.PracticeType ?? 0, out var lbl) ? lbl : "-";
                <tr>
                    <td>@s.PracticeDate.ToString("yyyy-MM-dd")</td>
                    <td>@s.InstrumentName</td>
                    <td>@label</td>
                    <td>@s.Focus</td>
                    <td>@s.Minutes</td>
                    <td>@s.Intensity</td>
                    <td>
                        @if (s.Achieved)
                        {
                            <span class="badge bg-success">✅</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">—</span>
                        }
                    </td>
                    <td class="text-end">
                        <a asp-action="Details" asp-route-id="@s.SessionId" class="btn btn-sm btn-outline-info">Visa</a>
                        <a asp-action="Edit" asp-route-id="@s.SessionId" class="btn btn-sm btn-outline-primary">Redigera</a>
                        <form asp-action="Delete" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@s.SessionId" />
                            <button type="submit" class="btn btn-sm btn-outline-danger"
                                    onclick="return confirm('Vill du verkligen radera detta pass?');">
                                Radera
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
