@model PracticeLogger.Models.PracticeSession
@using PracticeLogger.Models

@{
    ViewData["Title"] = "Detaljer";
}

<h2>Detaljer för övningspass</h2>

<div class="card mt-3">
    <div class="card-body">
        <h5 class="card-title">
            @Model.PracticeDate.ToString("yyyy-MM-dd") — @ViewBag.InstrumentName
        </h5>
        <h6 class="card-subtitle mb-2 text-muted">
            @((PracticeTypeCatalog.Labels.TryGetValue(Model.PracticeType ?? 0, out var label) ? label : "-"))
        </h6>

        <table class="table mt-3">
            <tbody>
                <tr>
                    <th>Datum</th>
                    <td>@Model.PracticeDate.ToString("yyyy-MM-dd")</td>
                </tr>
                <tr>
                    <th>Instrument</th>
                    <td>@ViewBag.InstrumentName</td>
                </tr>
                <tr>
                    <th>Minuter</th>
                    <td>@Model.Minutes</td>
                </tr>
                <tr>
                    <th>Intensitet</th>
                    <td>@Model.Intensity</td>
                </tr>
                <tr>
                    <th>Fokus</th>
                    <td>@Model.Focus</td>
                </tr>
                <tr>
                    <th>Passtyp</th>
                    <td>@((PracticeTypeCatalog.Labels.TryGetValue(Model.PracticeType ?? 0, out var l) ? l : "-"))</td>
                </tr>
                <tr>
                    <th>Mål</th>
                    <td>@Model.Goal</td>
                </tr>
                <tr>
                    <th>Målet uppnått</th>
                    <td>
                        @if (Model.Achieved == true)
                        {
                            <span class="badge bg-success">✅ Ja</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">❌ Nej</span>
                        }
                    </td>
                </tr>
                <tr>
                    <th>Tempo (start–slut)</th>
                    <td>
                        @if (Model.TempoStart.HasValue || Model.TempoEnd.HasValue)
                        {
                            @($"{Model.TempoStart ?? 0} → {Model.TempoEnd ?? 0} bpm")
                        }
                        else
                        {
                            <span class="text-muted">Ej angivet</span>
                        }
                    </td>
                </tr>
                <tr>
                    <th>Repetitioner</th>
                    <td>@Model.Reps</td>
                </tr>
                <tr>
                    <th>Fel</th>
                    <td>@Model.Errors</td>
                </tr>
                <tr>
                    <th>Humör</th>
                    <td>@(Model.Mood?.ToString("0") ?? "-")</td>
                </tr>
                <tr>
                    <th>Energi</th>
                    <td>@(Model.Energy?.ToString("0") ?? "-")</td>
                </tr>
                <tr>
                    <th>Fokusnivå</th>
                    <td>@(Model.FocusScore?.ToString("0") ?? "-")</td>
                </tr>
                <tr>
                    <th>Kommentar</th>
                    <td>@Model.Comment</td>
                </tr>
            </tbody>
        </table>

        <div class="mt-4 d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.SessionId" class="btn btn-primary">✏️ Redigera</a>
            <a asp-action="Index" class="btn btn-outline-secondary">⬅️ Tillbaka</a>
        </div>
    </div>
</div>
