@model PracticeSession
@{
    ViewData["Title"] = "Detaljer";
    var instrumentName = ViewBag.InstrumentName as string ?? $"#{Model.InstrumentId}";
}

<h2>Övningspass – detaljer</h2>

<div class="card mb-3">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Datum</dt>
            <dd class="col-sm-9">@Model.PracticeDate.ToString("yyyy-MM-dd")</dd>

            <dt class="col-sm-3">Instrument</dt>
            <dd class="col-sm-9">@instrumentName</dd>

            <dt class="col-sm-3">Minuter</dt>
            <dd class="col-sm-9">@Model.Minutes</dd>

            <dt class="col-sm-3">Intensitet</dt>
            <dd class="col-sm-9">@Model.Intensity</dd>

            <dt class="col-sm-3">Fokus</dt>
            <dd class="col-sm-9">@Model.Focus</dd>

            @if (!string.IsNullOrWhiteSpace(Model.Comment))
            {
                <dt class="col-sm-3">Kommentar</dt>
                <dd class="col-sm-9">@Model.Comment</dd>
            }
        </dl>
    </div>
</div>

<div class="d-flex gap-2">
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.SessionId">Redigera</a>
    <form asp-action="Delete" asp-route-id="@Model.SessionId" method="post" class="d-inline">
        <button class="btn btn-outline-danger" type="submit" onclick="return confirm('Ta bort passet?')">Ta bort</button>
    </form>
    <a class="btn btn-secondary" asp-action="Index">Tillbaka</a>
</div>
