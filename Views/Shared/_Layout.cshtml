<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PracticeLogger</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PracticeLogger.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-dark" asp-controller="PracticeSession" asp-action="Index">📓 PracticeLogger</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <!-- Databasdriven CRUD -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="PracticeSession" asp-action="Create">➕ Lägg till pass</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="PracticeSession" asp-action="Index">📋 Alla pass</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Instrument" asp-action="Index">🎺 Instrument</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@s.SessionId">Detaljer</a>

                        </li>

                        <!-- Lab1 (sessionbaserad) -->
                        <li class="nav-item ms-3">
                            <a class="nav-link text-muted" asp-controller="Practice" asp-action="Start">🧪 Lab1: Start</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-muted" asp-controller="Practice" asp-action="Summary">🧪 Lab1: Summering</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - PracticeLogger - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
