<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PracticeLogger</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PracticeLogger.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-dark" asp-controller="PracticeSession" asp-action="Index">📓 PracticeLogger</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <!-- Vänster meny -->
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="PracticeSession" asp-action="Create">➕ Lägg till pass</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="PracticeSession" asp-action="Index">📋 Alla pass</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="PracticeSession" asp-action="Summary">📊 Summering</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Analysis" asp-action="Coach">🤖 AI-coach</a>
                        </li>


                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Instrument" asp-action="Index">🎺 Instrument</a>
                        </li>
                    </ul>

                    <!-- Höger meny: Auth -->
                    <ul class="navbar-nav ms-auto">
                        @using System.Security.Claims
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            var displayName = User.FindFirst("DisplayName")?.Value ?? User.Identity?.Name;
                            <li class="nav-item">
                                <span class="navbar-text me-3">Hej, @displayName!</span>
                            </li>
                            <li class="nav-item">
                                <form class="d-inline" asp-area="Identity" asp-page="/Account/Logout" method="post">
                                    <button type="submit" class="btn btn-link nav-link p-0">Logga ut</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Logga in</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Skapa konto</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container d-flex justify-content-between">
            <span>&copy; 2025 – PracticeLogger</span>
            @if (User.Identity?.IsAuthenticated ?? false)
            {
                <span>Inloggad: @User.Identity?.Name</span>
            }
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
